#checkout-full, #checkout-share, #checkout-light
    position: relative
    width: 100%
    min-height: calc(100vh - 158px)
    #iframe
        background-color: #ffffff

#checkout-full
    #iframe
        min-height: calc(100vh - 158px)
        iframe
            min-height: calc(100vh - 162px)

#checkout-share
    max-width: calc(1366px + 4em)
    margin: auto
    #iframe
        display: flex
        justify-content: center
        margin-top: 65px
        iframe
            margin: auto
            width: 100%
            height: 100%
    .card-content
        margin-top: 65px
        padding: 32px 43px
        .row-divisor
            position: relative
            width: 100%
            height: 2px
            background-color: #707070
            margin-top: 18px
            margin-bottom: 18px
        h3.fake-heading
            position: relative
            display: inline-block
            width: 80%
            height: 18px
            background-color: #F7F7F7
            border-radius: 5px
            margin-top: 8px
            margin-bottom: 0px
        .fake-description
            position: relative
            display: inline-flex
            width: 100%
            height: 12px
            margin-top: 5px
            margin-bottom: 5px
            justify-content: space-between            
            .fake-label, .fake-price
                height: 12px
                background-color: #F7F7F7
                border-radius: 5px
            .fake-label
                width: 70%
            .fake-price
                width: 20%
            &.total-price
                .fake-label, .fake-price
                    background-color: #C9C9C9

#checkout-light
    max-width: calc(1366px + 4em)
    margin: 55px auto
    min-height: 0px
    background-color: #FFFFFF
    align-self: flex-start
    &::before
        content: " "
        position: absolute
        width: calc(100% - 20px)
        max-width: calc(1366px + 4em)
        height: 28px
        top: -14px
        left: 0px
        right: 0px
        margin: auto
        border-radius: 14px
        border-top: #4bde95 14px solid
    .merchant-content
        display: flex
        width: 100%
        flex-direction: column
        align-items: flex-start
        h3.fake-heading
            position: relative
            display: inline-block
            width: 95%
            max-width: 374px
            height: 27px
            background-color: #C9C9C9
            border-radius: 5px
            margin-top: 40px
            margin-bottom: 30px
        .fake-description
            position: relative
            display: inline-flex
            width: 100%
            height: 20px
            margin-top: 20px
            margin-bottom: 20px
            justify-content: space-between
            .fake-label, .fake-price
                position: relative
                background-color: #F7F7F7
                border-radius: 5px
                height: 20px
            &.with-title
                .fake-label, .fake-price
                    width: 49%
                    &::before
                        content: " "
                        position: absolute
                        top: -17px
                        left: 0px
                        width: 95%
                        max-width: 187px
                        height: 10px
                        background-color: #F7F7F7
                        border-radius: 5px
            &.with-divisor
                height: 40px
                margin-bottom: 0px
                border-bottom: solid 1px #C9C9C9
                .fake-label
                    width: 84%
                .fake-price
                    width: 14%
                    background-color: #C9C9C9

#iframe
    width: 100%

@media(max-width: 64em)
    #checkout-full, #checkout-share, #checkout-light
        min-height: calc(100vh - 70px)

@media(max-width: 48em)
    #checkout-full, #checkout-share, #checkout-light
        min-height: calc(100vh - 46px)
    #checkout-share
        #iframe, .card-content
            margin-top: 15px